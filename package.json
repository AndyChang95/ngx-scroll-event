{
  "name": "ng-scroll-event",
  "version": "1.0.0",
  "description": "An Angular 2+ directive to handle scroll events on an element.",
  "scripts": {
    "build": "ngc -p tsconfig.json",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "test": "tsc && karma start",
    "prepublish": "npm run clean && npm run build",
    "cleanRoot":"rm -f  ./*js ./*.js.map ./*.d.ts ./*.metadata.json 2> /dev/null",
    "cleanSrc":"rm -f ./src/*js ./src/*.js.map ./src/*.d.ts ./src/*.metadata.json 2> /dev/null",
    "clean":"npm run cleanRoot && npm run cleanSrc",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anasAsh/ng2-scroll-event"
  },
  "author": "anasAsh",
  "keywords": [
    "scroll",
    "directive",
    "event",
    "angular 2",
    "angular2"
  ],
  "license": "MIT",
  "main": "./index.js",
  "dependencies": {},
  "peerDependencies": {
    "@angular/core": "^2.4.0",
    "@angular/common": "^2.4.0",
    "@angular/compiler": "^2.4.5",
    "@angular/platform-browser": "^2.4.5",
    "@angular/router": "^3.2.0",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/core": "^2.4.0",
    "@angular/common": "^2.4.0",
    "@angular/compiler": "^2.4.5",
    "@angular/compiler-cli": "^2.4.5",
    "@angular/platform-browser": "^2.4.5",
    "@angular/platform-server": "^2.4.5",
    "codelyzer": "^3.0.0-beta.0",
    "rxjs": "^5.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.0.2",
    "zone.js": "0.7.2",
    "@types/es6-shim": "^0.31.32",
    "@types/jasmine": "^2.5.40",
    "@types/selenium-webdriver": "^2.53.39"
  },
  "engines": {
    "node": ">=0.8.0"
  }
}